  "field_definitions": {
    "dni": {
      "patterns": [
        "\\b([0-9]{8}[A-Za-z])\\b",
        "dni:?\\s*([0-9]{8}[A-Za-z])",
        "con dni\\s*([0-9]{8}[A-Za-z])"
      ],
      "validation_pattern": "^\\d{8}[A-Za-z]$",
      "required_for": ["abonado", "factura", "incidencia_consulta", "incidencia_creacion"]
    },
    "ubicacion": {
      "patterns": [
        "(?:en|de)\\s+([A-ZÁÉÍÓÚÑa-záéíóúñ\\s]+?)(?:\\s*(?:,|\\.|$|dni|descripci[oó]n))",
        "ubicaci[oó]n:?\\s+([A-ZÁÉÍÓÚÑa-záéíóúñ\\s]+?)(?:\\s*(?:,|\\.|$))"
      ]
    },
    "descripcion": {
      "patterns": [
        "descripci[oó]n:?\\s+(.+?)(?:\\s*(?:,|\\.|$))",
        "(?:problema|avería|fallo):?\\s+(.+?)(?:\\s*(?:,|\\.|$))"
      ]
    }
  },
  
  "field_rules": {
    "generic": {
      "require": [],
      "inject_context": []
    },
    "abonado": {
      "require": ["dni"],
      "inherit": ["dni"],
      "inject_context": ["dni"]
    },
    "factura": {
      "require": ["dni"],
      "inherit": ["dni"],
      "inject_context": ["dni"]
    },
    "incidencia_consulta": {
      "require": ["dni"],
      "inherit": ["dni"],
      "inject_context": ["dni"]
    },
    "incidencia_creacion": {
      "require": ["dni", "ubicacion", "descripcion"],
      "inherit": ["dni"],
      "inject_context": ["dni", "ubicacion", "descripcion"]
    }
  },
  
  "error_messages": {
    "dni": "Necesito el DNI para consultar los datos. Por favor, incluye el DNI en tu mensaje (formato: 12345678A).",
    "dni_invalid": "El formato del DNI no es válido. Debe ser 8 dígitos seguidos de una letra (ejemplo: 12345678A).",
    "ubicacion": "Para crear una incidencia necesito la ubicación. Por favor, especifica dónde ocurre el problema.",
    "descripcion": "Para crear una incidencia necesito una descripción del problema."
  },
  
  "reference_indicators": [
    "este", "estos", "sus", "su", "mismo", "anterior", "anteriores",
    "y ahora", "y los", "y las", "otro", "otra", "y en", "ese", "esa"
  ],

  "context_validators": {
    "abonado": {
      "required_any": ["datos", "abonado", "cliente", "información"],
      "exclude_any": ["incidencia", "problema", "factura", "pago"]
    },
    "factura": {
      "required_any": ["factura", "pago", "deuda", "debe", "adeudo"],
      "exclude_any": ["incidencia", "problema"]
    },
    "incidencia_consulta": {
      "required_any": ["incidencia", "incidencias"],
      "exclude_any": ["crear", "nueva", "reportar"]
    },
    "incidencia_creacion": {
      "required_any": ["crear", "nueva", "reportar", "tengo", "hay"],
      "exclude_any": ["ver", "mostrar", "mis incidencias"]
    }
  },

  "context_management": {
    "preserve_on_user_change": ["dni", "query_type", "last_message"],
    "user_identifier_field": "dni"
  }
}
