    "incidencias_por_ubicacion": {
      "title": "<i class=\"fas fa-map-marker-alt\" style=\"color: #2196F3;\"></i> Incidencias por Ubicación",
      "format_type": "cards",
      "data_key": "incidencias",
      "empty_message": "No hay incidencias en esta ubicación.",
      "card_config": {
        "title": "<i class=\"fas fa-ticket-alt\"></i> Incidencia",
        "fields": [
          {"key": "estado", "label": "Estado"},
          {"key": "descripcion", "label": "Descripción"}
        ]
      }
